<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="1" verbose="1" name="AppointmentCenter">
    <listeners>
        <listener class-name="com.biit.appointment.core.TestListener"/>
    </listeners>

    <test name="AppointmentCenter" enabled="true" preserve-order="true">
        <groups>
            <run>
                <include name="recurrenceTest"/>
                <include name="appointmentTest"/>
                <include name="appointmentTemplateTest"/>
                <include name="userAvailability"/>
                <include name="externalCredentials"/>
            </run>
        </groups>
        <classes>
            <class name="com.biit.appointment.core.test.RecurrenceTests"/>
            <class name="com.biit.appointment.core.test.AppointmentTests"/>
            <class name="com.biit.appointment.core.test.AppointmentTemplateTests"/>
            <class name="com.biit.appointment.core.test.UserAvailabilityTests"/>
            <class name="com.biit.appointment.core.test.ExternalCredentialsTests"/>
        </classes>
    </test>
</suite>